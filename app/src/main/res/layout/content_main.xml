<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:id="@+id/mainLayout"
    tools:context="com.randytsao.virtualdrumpad.MainDrumPadActivity"
    tools:showIn="@layout/activity_main">


    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="*"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/padOne"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/pad_one"
                android:onClick="onPadOneClicked" />

            <Button
                android:id="@+id/padTwo"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/pad_two"
                android:onClick="onPadTwoClicked" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/padThree"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/pad_three"
                android:onClick="onPadThreeClicked" />

            <Button
                android:id="@+id/padFour"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/pad_four"
                android:onClick="onPadFourClicked" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/padFive"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/pad_five"
                android:onClick="onPadFiveClicked" />

            <Button
                android:id="@+id/padSix"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/pad_six"
                android:onClick="onPadSixClicked" />
        </TableRow>

    </TableLayout>
</android.support.constraint.ConstraintLayout>
